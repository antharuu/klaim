    "keywords": [
        "typescript",
        "api",
        "request",
        "user experience",
        "optimization",
        "lightweight"
    ],
    "license": "MIT",
    "scripts": {
        "build": "vite build",
        "dev": "vite build --watch",
        "test": "vitest",
        "test:ui": "vitest --ui --coverage.enabled=true",
