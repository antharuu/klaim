    },
    "main": "dist/klaim.cjs.js",
    "module": "dist/klaim.es.js",
    "devDependencies": {
        "@eslint/js": "9.16.0",
        "@stylistic/eslint-plugin": "2.11.0",
        "@types/bun": "latest",
        "@types/eslint__js": "8.42.3",
        "@types/node": "^22.10.1",
        "@vitest/coverage-v8": "^2.1.8",
        "@vitest/ui": "^2.1.8",
        "dotenv-cli": "^7.4.4",
        "eslint": "9.16.0",
