{
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
        "release": true,
        "tokenRef": "GITHUB_TOKEN"
    },
    "npm": {
        "publish": true,
        "tokenRef": "NPM_TOKEN"
    },
    "git": {
        "requiredBranch": "main",
        "requireCleanWorkingDir": false,
        "commitMessage": "chore: release v%s"
    },
    "hooks": {
        "before:init": [
            "git pull",
            "npm run lint"
        ]
    }
}
